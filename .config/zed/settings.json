{
    // Editor
    "autosave": "on_focus_change",
    "format_on_save": "off",

    "cursor_shape": "block",

    "soft_wrap": "editor_width",

    "tab_size": 4,

    "diagnostics": {
        "inline": {
            "enabled": true
        }
    },

    "edit_predictions": {
        "mode": "subtle"
    },

    "minimap": {
        "show": "always",
        "display_in": "all_editors",
        "thumb_border": "none"
    },

    "tabs": {
        "git_status": true,
        "file_icons": true,
        "show_diagnostics": "all"
    },

    // Font
    "ui_font_family": "Inter",
    "ui_font_size": 16,

    "buffer_font_family": "JetBrainsMono Nerd Font",
    "buffer_font_size": 16,
    "buffer_font_weight": 600,
    "buffer_font_features": {
        "calt": false
    },

    // Panels
    "project_panel": {
        "auto_fold_dirs": false
    },

    "git_panel": {
        "status_style": "label_color"
    },

    "terminal": {
        "blinking": "on"
    },

    // Theme
    "theme": {
        "mode": "system",
        "light": "Matugen Light",
        "dark": "One Dark Pro"
    },
    "icon_theme": "Material Icon Theme"
}
