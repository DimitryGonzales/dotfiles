configuration {
    modi: "drun,clipboard:~/.config/rofi/scripts/cliphist-rofi-img,emoji,power-menu:rofi-power-menu --choices=shutdown/reboot,window";

    display-drun:        "Apps";
    display-clipboard:   "Clipboard";
    display-emoji:       "Emoji";
    display-window:      "Windows";

    display-combi:       "Combi";
    display-filebrowser: "File Browser";
    display-run:         "Run";
    display-ssh:         "SSH";

    show-icons: true;

    hover-select: true;
    me-select-entry: "";
    me-accept-entry: "MousePrimary";
}

@theme "~/.config/rofi/theme.rasi"
